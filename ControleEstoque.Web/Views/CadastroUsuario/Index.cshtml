@model List<ControleEstoque.Web.Models.UsuarioModel>

@{
    Layout = "~/Views/Shared/_Cadastro.cshtml";
    ViewBag.Title = "Usuários";
}

@section Style{
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <link href="~/Content/Cadastro/Usuario.css" rel="stylesheet" />
}

@section TituloGrid{
    <th>Nome</th>
    <th>Login</th>
    <th>Ação</th>
}

@section LinhaGrid{
    @{
        var linha = 0;
        foreach (var item in Model)
        {
            linha++;
            if (linha <= ViewBag.QuantMaxLinhasPorPagina)
            {
                <tr data-id="@item.Id">
                    <td>@item.Nome</td>
                    <td>@item.Login</td>
                    <td>
                        <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
            else
            {
                break;
            }
        }
    }
}

@section CamposCadastro{
    <div class="row">
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("txt_nome", "Nome", new { @class = "col-md-3 control-label" })
                @Html.TextBox("txt_nome", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("txt_login", "Login", new { @class = "col-md-3 control-label" })
                @Html.TextBox("txt_login", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.Label("txt_senha", "Senha", new { @class = "col-md-3 control-label" })
                @Html.TextBox("txt_senha", null, new { @class = "form-control", type = "password" })
            </div>
        </div>
    </div>
}

@section Scripts{
    <script src="~/Scripts/bootstrap-select.js"></script>
    <script>
        var tituloPagina = '@ViewBag.Title';
        var url_alterar = '@Url.Action("RecuperarUsuario", "CadastroUsuario")';
        var url_excluir = '@Url.Action("ExcluirUsuario", "CadastroUsuario")';
        var url_confirmar = '@Url.Action("SalvarUsuario", "CadastroUsuario")';
        var url_page_click = '@Url.Action("UsuarioPagina", "CadastroUsuario")';
        var url_tam_pag_change = '@Url.Action("UsuarioPagina", "CadastroUsuario")';
    </script>
    <script src="~/Scripts/Cadastro/Usuario.js"></script>
}
